<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/concernedPersonInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textPersonName"
                style="@style/EditText"
                android:hint="@string/concerned_person"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/primaryNumberInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="phone"
                android:maxLength="10"
                style="@style/EditText"
                android:hint="@string/primary_mobile_number"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/secondaryNumberInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="phone"
                android:maxLength="10"
                style="@style/EditText"
                android:hint="@string/secondary_mobile_number"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textEmailAddress"
                style="@style/EditText"
                android:hint="@string/email_address"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ageInput"
                app:errorTextAppearance="@style/error_appearance"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/TextInputLayout">
                <EditText
                    android:inputType="number"
                    android:maxLength="3"
                    style="@style/EditText"
                    android:hint="@string/age"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:text="Gender"
                    />
                <Spinner
                    android:id="@+id/gender"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="10dp"
                    android:entries="@array/gender"
                    />
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/nationalityInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textEmailAddress"
                style="@style/EditText"
                android:hint="@string/nationality"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:text="Use company registered address for pickup"
            />
        <Spinner
            android:id="@+id/addressAssertion"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="14dp"
            android:paddingTop="8dp"
            android:entries="@array/assertion"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pickupInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textEmailAddress"
                style="@style/EditText"
                android:hint="@string/pickup_address"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pinCodeInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="number"
                style="@style/EditText"
                android:hint="@string/pin_code"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/cityInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textAutoComplete"
                style="@style/EditText"
                android:hint="@string/city"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/stateInput"
            app:errorTextAppearance="@style/error_appearance"
            style="@style/TextInputLayout">
            <EditText
                android:inputType="textAutoComplete"
                style="@style/EditText"
                android:hint="@string/state"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>
