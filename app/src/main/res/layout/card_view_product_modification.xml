<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:id="@+id/image"
            android:layout_marginRight="10dp"/>


        <TextView
            android:text="@string/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:id="@+id/product_name" />

        <TextView
            android:text="@string/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@+id/product_name"
            android:layout_toRightOf="@+id/image"
            android:id="@+id/company_name" />

        <TextView
            android:text="@string/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/company_name"
            android:layout_alignRight="@+id/company_name"
            android:layout_alignEnd="@+id/company_name"
            android:id="@+id/category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/image"
            android:layout_marginTop="8dp"
            android:text=" "
            android:layout_below="@+id/category"
            android:id="@+id/identifier1" />

        <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/identifier1"
            android:layout_alignRight="@+id/identifier1"
            android:layout_alignEnd="@+id/identifier1"
            android:id="@+id/identifier2" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/click_update_stock"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Click to update stocks"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:textSize="10sp"
            android:id="@+id/click_expected_date"
            android:textColor="#464646"
            android:text="Click here to give us expected date to get 400 stocks (optional)"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

